generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Status {
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id        String     @id
  email     String?    @unique
  name      String?
  imageUrl  String?
  credits   Int     @default(10)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  channels  Channels[]
}

model Channels {
  userId          String   
  channelId       String   @unique
  title           String
  description     String?
  thumbnail       String?
  subscriberCount String
  videoCount      String
  viewCount       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id])

  similarChannels SimilarChannels[]
  assests              Assests[]
  videoIdeas           VideoIdeas[]
  thumbnails           Thumbnails[]
  reels                Reels[]

  @@id([userId, channelId])
}

model SimilarChannels {
  ownerChannelId   String
  similarChannelId String
  rank             Int      @default(0)
  relevance_score  String
  reasoning        String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  ownerChannel     Channels @relation( fields: [ownerChannelId], references: [channelId])

  @@id([ownerChannelId, similarChannelId])
}

model Assests {
  id          String   @id @default(uuid())
  generatorId String   @unique
  status      Status   @default(PROCESSING)
  channelId   String   @unique
  url         String?
  assetType   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  channel     Channels @relation(fields: [channelId], references: [channelId])
}

model VideoIdeas {
  id          String       @id @default(uuid())
  channelId   String
  title       String
  description String?      @db.Text
  script      String?      @db.Text
  plan        String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  channel     Channels     @relation(fields: [channelId], references: [channelId])
  thumbnails  Thumbnails[]
  reels       Reels[]
}

model Thumbnails {
  id          String     @id @default(uuid())
  channelId   String
  generatorId String     @unique
  status      Status     @default(PROCESSING)
  title       String?
  url         String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  videoIdeaId String?
  videoIdea   VideoIdeas? @relation(fields: [videoIdeaId], references: [id])
  channel     Channels   @relation(fields: [channelId], references: [channelId])
}

model Reels {
  id          String       @id @default(uuid())
  channelId   String
  generatorId String       @unique
  status      Status       @default(PROCESSING)
  title       String
  description String?      @db.Text
  url         String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  videoIdeaId String
  videoIdea   VideoIdeas   @relation(fields: [videoIdeaId], references: [id])
  channel     Channels     @relation(fields: [channelId], references: [channelId])
  reelAssets  ReelAssets[]
}

model ReelAssets {
  id          String   @id @default(uuid())
  reelId      String
  generatorId String   @unique
  status      Status   @default(PROCESSING)
  url         String?
  assetType   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reel        Reels    @relation(fields: [reelId], references: [id])
}
